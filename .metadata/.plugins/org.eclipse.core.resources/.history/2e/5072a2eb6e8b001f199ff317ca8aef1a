package com.DAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.ArrayList;

import com.database.Util;
import com.model.BookModel;

public class BookDAO implements DAOinterface<BookModel> {
	
	public static BookDAO getInstance() {
		return new BookDAO()
	}
	
	@Override
	public int Insert(BookModel t, String Bookname, String Bookedition, double Bookprice) {
		
		int kq =0;
		// TODO Auto-generated method stub
		try {
			Class.forName("com.mysql.jdbc.Driver");
			Connection c = Util.getConnection();
			String sql = "Insert into Bookdata(Bookname, Bookedition, Bookprice) Values(?,?,?)";
			
			PreparedStatement pst = c.prepareStatement(sql);
			
			pst.setString(1, Bookname);
			pst.setString(2, Bookedition);
			pst.setString(3, Bookprice+"");
			
			System.out.println("Ban da thuc thi cau lenh");
			System.out.println(sql);
			
			kq = pst.executeUpdate();
			
			System.out.println("Co: " + kq + " dong bi thay doi");
			
			Util.closeDatabase(c);
			
			return kq;
			
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
		return kq;
	}

